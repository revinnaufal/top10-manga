<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".detail_list"
        android:orientation="vertical"
        android:id="@+id/allofthem"
>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    >
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <LinearLayout
                    android:layout_marginLeft="3dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:id="@+id/LinearLayoutAwal"

            >
                <ImageView
                        android:layout_width="50dp"
                        android:layout_height="300dp"
                        android:id="@+id/imageView_detail"
                        android:layout_gravity="center"
                        android:transitionName="simple_activity_transition"
                        android:layout_weight="1"/>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="50dp"
                        android:layout_height="300dp"
                        android:layout_weight="1">
                    <TextView
                            android:id="@+id/detail_judulmanga"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/manga_name"
                            android:textSize="25sp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginBottom="5dp"
                            android:textColor="#000000"
                            android:textStyle="bold"
                    />
                    <TextView
                            android:id="@+id/texview_sinopsis"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="Sinopsis"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="#000000"
                    />
                    <androidx.core.widget.NestedScrollView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                                      android:orientation="vertical">
                            <TextView
                                    android:id="@+id/sinopsis_detail"
                                    android:layout_marginRight="3dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="end"
                                    android:layout_marginLeft="5dp"
                                    android:textSize="12sp"
                                    android:text="Sinopsiss"
                            />
                        </LinearLayout>
                    </androidx.core.widget.NestedScrollView>
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/relativeallofthem"
            >
                <TextView
                        android:layout_marginTop="6dp"
                        android:text="AUTHORS"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView_authors"
                        android:layout_centerHorizontal="true"
                />
                <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/author_imageview"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        tools:src="@color/colorPrimary"
                        android:layout_below="@+id/textView_authors"
                        android:layout_centerHorizontal="true"
                />
                <TextView
                        android:id="@+id/Author_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Author Name"
                        android:layout_below="@+id/author_imageview"
                        android:layout_centerHorizontal="true"
                />
                <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/yellowstar"
                        android:layout_below="@+id/Author_name"
                        android:layout_toLeftOf="@+id/reviewscore"


                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/reviewscore"
                        android:layout_marginTop="10dp"
                        android:text="4.5"
                        android:textStyle="bold"
                        android:textColor="#3E1686"
                        android:textSize="25sp"
                        android:layout_below="@+id/Author_name"
                        android:layout_centerHorizontal="true"
                />
                <TextView
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/10"
                        android:textSize="20sp"
                        android:layout_toRightOf="@+id/reviewscore"
                        android:layout_toEndOf="@+id/reviewscore"
                        android:layout_below="@+id/Author_name"

                />
                <TextView
                        android:id="@+id/TextViewManga"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:textColor="#000000"
                        android:text="REVIEWS"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_below="@+id/reviewscore"
                />
            </RelativeLayout>
            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_viewReviewer"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="bottom"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
        </LinearLayout>
    </RelativeLayout>

</androidx.core.widget.NestedScrollView>