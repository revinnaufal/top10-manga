<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical"
>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
    >
        <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:adjustViewBounds="true"
                android:src="@drawable/yellowstar"
                android:id="@+id/star"

        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Most Favourited Manga List"
                android:layout_toRightOf="@+id/star"

        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="Reference from : "
                android:layout_toLeftOf="@+id/logomal"

        />
        <ImageView
                android:id="@+id/logomal"
                android:layout_width="64dp"
                android:layout_height="11dp"
                android:adjustViewBounds="true"
                android:src="@drawable/mal"
                android:layout_alignParentRight="true"
        />

    </RelativeLayout>
    <!--
    <ImageView
            android:id="@+id/top10image"
            android:adjustViewBounds="true"
            android:maxWidth="60dp"
            android:maxHeight="60dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/lol"
    />
    -->
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyvlerview_manga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"/>



</LinearLayout>